<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Cocoon.ORM</RootNamespace>
    <AssemblyName>cocoon-orm</AssemblyName>
    <Version>2.9.0</Version>
    <Authors>Rhett Thompson</Authors>
    <Product>Cocoon ORM</Product>
    <Description>Cocoon ORM is a simple .NET object-relational mapper alternative to Entity Framework or NHibernate. Cocoon ORM supports SQL Server, and SQL Azure.</Description>
    <PackageIconUrl>https://raw.githubusercontent.com/Guidelinetech/cocoon-orm/master/cocoon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/Guidelinetech/cocoon-orm</RepositoryUrl>
    <PackageTags>ORM Entity Framework NHibernate SQLServer Database Object relational mapper DAL</PackageTags>
    <PackageLicenseUrl>https://github.com/Guidelinetech/cocoon-orm/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Guidelinetech/cocoon-orm</PackageProjectUrl>
    <PackageId>cocoon-orm</PackageId>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageReleaseNotes>Added GetList method that accept a string as a where clause.</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <Company>Rhett Thompson</Company>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <Configurations>Debug;Release;Debug Remote</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
  </ItemGroup>

</Project>
